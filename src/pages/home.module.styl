.home-container
    .display-container
        height 450px
        background-image url('https://source.unsplash.com/random')
        background-size cover
        background-repeat no-repeat
        color white

        .display-text-container
            padding-left 72px
            padding-top 250px

            .display-title
                font-size 32px
                font-weight bold

            .display-second-title
                font-size 20px

    .desc-container
        background-color white
        height 300px
        font-size 35px
        display flex
        justify-content center
        align-items center
        flex-direction: column


    .fun-container
        display flex
        padding 32px
        justify-content center
        align-items center

        .fun-item
            padding 16px
            border 1px solid rgba(0, 0, 0, 0.1)
            display flex
            flex-direction column
            justify-content center
            align-items center
            width 200px
            margin 0 16px
            background-color white

            svg
                font-size 30px
                color white

            .item-desc
                font-size 20px
                width 150px
